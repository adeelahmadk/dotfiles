--[[
Series Name:    Star Warp
Code Name:      A new hope
Designer:       Codegenki
Description:	  StarWarp, a minimalist futuristic configuration for Conky
                system monitor (with added lua script for CPU temperature
                indicator).
Dependencies:	  conky (>= 1.10), Font: Neuropolitical
]]

conky.config = {
  update_interval = 1,
  no_buffers = true,
  double_buffer = true,
  cpu_avg_samples = 2,
  net_avg_samples = 2,
  out_to_console = false,
  out_to_stderr = false,
  extra_newline = false,
  draw_borders = true,
  draw_graph_borders = false,
  draw_outline = false,
  draw_shades = false,

  alignment = 'bottom_middle',
  background = true,
  gap_x = 0,
  gap_y = 10,
  minimum_height = 30,
  --maximum_height = 35,
  minimum_width = 1220,
  maximum_width = 1280,
  border_width = 0,
  default_color = 'D0D5DE',
  default_outline_color = 'C0C5CE',
  default_shade_color = 'C0C5CE',

  own_window = true,
  own_window_class = 'Conky',
  own_window_type = 'normal',
  own_window_transparent = false,
  own_window_colour = '000000',
  own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
  own_window_argb_visual = true,
  own_window_argb_value = 100,

  stippled_borders = 0,
  uppercase = false,
  use_spacer = 'none',
  show_graph_scale = false,
  show_graph_range = false,

  use_xft = true,
  xftalpha = 1,
  font = 'Neuropolitical:size=8',
  --text_buffer_size = 256,
  override_utf8_locale = true,
  pad_percents=2,

  lua_load = '~/.config/conky/starwarp/scripts/sys_info.lua',
  lua_draw_hook_post = 'main',

  --[[ # normal text, light grey ]]
  color1 = 'D0D5DE',
  --[[ # caution text, tomato ]]
  color2 = 'BF616A',
  --[[ # stat text, mint ]]
  color3 = '3eb489',
  --[[ # highlight, lemon yellow ]]
  color4 = 'fff44f',
  --[[ # heading text, smokey grey ]]
  color5 = '8FA1B3',
  --[[ # graph color, Cyanogen light ]]
  color6 = '2BB5C9',
  --[[ # special, Cyanogen dark ]]
  color7 = '0C3247',
  --[[ # special, Pop OS cyan ]]
  color8 = '94EBEB',
  color9 = 'DC143C',

-------------------------------------
--Locale (e.g. "es_ES.UTF-8")
--Leave empty for default
-------------------------------------
  template1="en_US.UTF-8"
}

conky.text = [[
\
\
${voffset 7}\
${goto 15}${color6}CPU${color}${offset 10}$freq_g${goto 90}GHz\
${goto 120}${color6}|${color}${offset 5}${cpu cpu0}${goto 150}%\
\
${goto 175}${color6}Temp${color}${offset 10}${lua_parse cpu_temp}${goto 250}Â°C\
\
${goto 280}${color6}RAM${color}${offset 10}$mem${color6} / ${color}$memmax\
\
${goto 463}${color6}HDD${color4}${offset 10}/${color}${offset 10}${fs_used /}${color6} | ${color}${fs_used_perc /} %\
\
${offset 10}${color4}/home${color}${offset 10}${fs_used /home}${color6} | ${color}${fs_used_perc /home} %\
\
${offset 10}${color4}Data${color}${offset 10}${fs_used /media/adeel/Data}${color6} | ${color}${fs_used_perc /media/adeel/Data} %\
\
\
${goto 960}${color6}BAT${color}${offset 10}\
${if_match ${battery_percent BAT0}<=15}${color9}${blink ${battery_percent BAT0}${color}${offset 5}%}\
${else}${if_match ${battery_percent BAT0}<=25}${color9}${battery_percent BAT0}${color}${offset 5}%\
${else}${if_match ${battery_percent BAT0}>25}${color}${battery_percent BAT0}${color}${offset 5}%${endif}${endif}${endif}\
\
${goto 1050}${color6}UPTIME${color}${offset 10}$uptime\
\
\
]]
