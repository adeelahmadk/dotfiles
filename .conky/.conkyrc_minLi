--[[
Name:			minimalHash
Code Name:		Lithium (Li)
Designer:		Codegenki
Description: 	minimal#, a minimalist configuration for Conky system monitor with low battery indicator.
]]

conky.config = {
    alignment = 'top_middle',
    background = true,
    gap_x = 10,
    gap_y = 5,
    minimum_height = 40,
    minimum_width = 1000,
    
    border_width = 0,
    default_color = 'D0D5DE',
    default_outline_color = 'C0C5CE',
    default_shade_color = 'C0C5CE',
    draw_borders = true,
    draw_graph_borders = true,
    draw_outline = false,
    draw_shades = false,
    use_xft = true,
    font = 'DejaVu Sans:size=6',
    
    cpu_avg_samples = 2,
    net_avg_samples = 2,
    no_buffers = true,
    double_buffer = true,
    out_to_console = false,
    out_to_stderr = false,
    extra_newline = false,
    
    own_window = true,
    own_window_class = 'Conky',
    own_window_type = 'normal',
    own_window_transparent = false,
    own_window_colour = '000000',
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    own_window_argb_visual = true,
    own_window_argb_value = 140,
    
    stippled_borders = 0,
    update_interval = 1.0,
    uppercase = false,
    use_spacer = 'none',
    show_graph_scale = true,
    show_graph_range = false,

	--[[ # normal text, light grey ]]
	color1 = 'D0D5DE',
	--[[ # caution text, tomato ]]
	color2 = 'BF616A',
	--[[ # stat text, mint ]]
	color3 = '3eb489',
	--[[ # highlight, lemon yellow ]]
	color4 = 'fff44f',
	--[[ # heading text, smokey grey ]]
	color5 = '8FA1B3',
	--[[ # graph color, Cannonical Aubergine ]]
	color6 = '772953',
	--[[ # special, ubuntu orange ]]
	color7 = 'E95420',
	color8 = 'DC143C'
}

conky.text = [[
${goto 8}${color3}${USER}${color} @ ${color3}${nodename}${color} ${goto 135}${color5}Uptime ${color}$uptime${goto 250}${color5}BAT ${color}${if_match ${battery_percent BAT0}<=15}${color8}${blink ${battery_percent BAT0}}${color}${else}${if_match ${battery_percent BAT0}<=25}${color8}${battery_percent BAT0}${else}${if_match ${battery_percent BAT0}>25}${color}${battery_percent BAT0}${endif}${endif}${endif}%${goto 315}${color5}CPU ${color}$freq_g GHz  ${goto 380}${color5}Load ${color}${cpu cpu0}% ${goto 430}${cpugraph cpu0 7,40 004C99 3399FF -l} ${goto 500}${color5}RAM ${color}$mem/$memmax - $memperc% ${goto 650}${color5}HDD${color4}  root   ${color}${fs_used /} / ${fs_size /} ${goto 800}${color5}Net ${color4}⬇${color}${downspeed wlp4s0} ${color4}⬆${color}${upspeed wlp4s0} ${goto 930}${color5}T/R ${time %b}${color} ${color}${execi 300 vnstat -m | grep "`LC_ALL=C date +"%b '%y"`" | awk '{print $9 $10}'}/month
${voffset 2}${font DejaVu Sans:size=5}${goto 15}${color2}${execi 3600 lsb_release -si} ${execi 3600 lsb_release -sc}${color}${goto 400}${color4}+${color}${cpu cpu1}%${goto 430}└ ${top name 1}${goto 500} └ ${top_mem name 1} ${goto 674}${font}${color4}home ${color}${fs_used /home} / ${fs_size /home}${font DejaVu Sans:size=5}
${goto 400}${color4}+${color}${cpu cpu2}%${goto 430}   ${top name 2}${goto 500}    ${top_mem name 2}
${goto 400}${color4}+${color}${cpu cpu3}%${goto 430}   ${top name 3}${goto 500}    ${top_mem name 3}
${goto 400}${color4}+${color}${cpu cpu4}%${goto 430}   ${top name 4}${goto 500}    ${top_mem name 4}${font}
#${color5}BAT ${color}${if_match ${battery_percent BAT0}<=15}${color8}${blink ${battery BAT0}}${color}${else}${if_match ${battery_percent BAT0}<=25}${color8}${battery BAT0}${else}${if_match ${battery_percent BAT0}>25}${color}${battery BAT0}${endif}${endif}${endif}
]]
